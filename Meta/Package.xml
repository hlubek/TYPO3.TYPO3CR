    <version>0.5.0-alpha2</version>
    <categories/>
    <parties>
        <person role="LeadDeveloper">
            <name>Karsten Dambekalns</name>
            <email>karsten@typo3.org</email>
            <website></website>
            <organisation>TYPO3 Association</organisation>
            <repositoryUserName>k-fish</repositoryUserName>
        </person>
    </parties>
    <constraints>
